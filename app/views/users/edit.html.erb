<div class="page-main">
  <div class="page-content page-content_input">
    <div class="page-content__header">
      <h2 class="page-content__title">ユーザーアカウント</h2>
    </div>
    <div class="page-content__main">
      <% @user.errors.full_messages.each do |message| %>
        <div class="errors">
          <%= message %>
        </div>
      <% end %>

      <%= form_tag("/users/create") do %>
        <p>ユーザー名</p>
        <input type="text" name="name" value="<%= @user.name %>" class="page-content__input-text">
        <p>パスワード</p>
        <input type="password" name="password" value="<%= @user.password %>" class="page-content__input-text">
        <input type="submit" value="変更する" class="button button_text">
      <% end %>
    </div>
    <a href="/posts/top" class="page-content__cancel"><span>もどる</span></a>
  </div>
</div>
