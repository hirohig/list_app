<div class="page-main">
  <div class="page-content">
    <div class="page-content__header">
      <h2 class="page-content__title">投稿一覧</h2>
      <span class="button">
        <%= link_to("メモ追加", "/posts/new", {class: "button_text"}) %>
      </span>
    </div>
    <div class="page-content__main">
      <% @posts.each do |post| %>
        <div class="posts-index">
          <div class="posts-index__items">
            <%= link_to(post.user.name, "/users/#{post.user.id}", {class: "posts-index__user"}) %>
            <%= link_to(post.name, "/posts/#{post.id}") %>
          </div>
        </div>
      <% end %>
    </div>
    <a href="/posts/top" class="page-content__cancel"><span>もどる</span></a>
  </div>
</div>
