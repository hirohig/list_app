<div class="page-main">
  <div class="page-content page-content_input">
    <div class="page-content__header">
      <h2 class="page-content__title">メモ編集</h2>
    </div>
    <div class="page-content__main">
      <% @post.errors.full_messages.each do |message| %>
        <div class="errors">
          <%= message %>
        </div>
      <% end %>

      <%= form_tag("/posts/#{@post.id}/update") do %>
        <p>買うもの</p>
        <input type="text" name="name" value="<%= @post.name %>" class="page-content__input-text">
        <input type="submit" value="更新する" class="button button_text">
      <% end %>
      <div class="posts-menu">
        <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post", class: "posts-menu__link"}) %>
      </div>
    </div>
    <a href="/posts/top" class="page-content__cancel"><span>もどる</span></a>
  </div>
</div>
